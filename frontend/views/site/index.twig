<section class="brands">
    <div class="wrapper">
        <div class="items">
            {% for item in brands %}
            <div class="item">
                <a href="/{{ item.alias }}">
                    <img src="/userfiles/auto_brands/{{ item.image }}" alt="alt">
                </a>
                <ul>
                    {% for autoModel in item.autoModels %}
                    <li><a href="/{{ item.alias }}/{{ autoModel.alias }}">{{ autoModel.name }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            {% endfor %}
        </div>
        <div class="load__more-btn">
            <a href="#">Показать все модели</a>
        </div>
    </div>
</section>
