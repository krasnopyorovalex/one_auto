<urlset xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">
    <url>
        <loc>{{ app.request.hostInfo }}</loc>
        <lastmod>{{ "now"| date("Y-m-d\\TH:i:sP") }}</lastmod>
        <changefreq>daily</changefreq>
        <priority>1</priority>
    </url>
{% if pages %}
{% for item in pages %}
    <url>
        <loc>{{ app.request.hostInfo }}/{{ item.alias }}</loc>
        <lastmod>{{ item.updated_at| date("Y-m-d\\TH:i:sP") }}</lastmod>
        <changefreq>daily</changefreq>
        <priority>0.9</priority>
    </url>
{% endfor %}
{% endif %}
{% if services %}
{% for item in services %}
    <url>
        <loc>{{ app.request.hostInfo }}/services/{{ item.alias }}</loc>
        <lastmod>{{ item.updated_at| date("Y-m-d\\TH:i:sP") }}</lastmod>
        <changefreq>daily</changefreq>
        <priority>0.9</priority>
    </url>
{% endfor %}
{% endif %}
{% if articles %}
{% for item in articles %}
    <url>
        <loc>{{ app.request.hostInfo }}/articles/{{ item.alias }}</loc>
        <lastmod>{{ item.updated_at| date("Y-m-d\\TH:i:sP") }}</lastmod>
        <changefreq>daily</changefreq>
        <priority>0.9</priority>
    </url>
{% endfor %}
{% endif %}
</urlset>