{{ set(this, 'title', model.title) }}
{{ this.registerMetaTag({'name':'description', 'content': model.description}) }}

<div class="container wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="center content">
                <div class="breadcrumbs">
                    <ul>
                        <li><a href="/">Главная</a></li>
                        <li><a href="{{ path('site/page', {'alias': 'articles'}) }}">Полезная информация</a></li>
                        <li>{{ model.name }}</li>
                    </ul>
                </div>
                <!-- /.breadcrumbs -->

                <h1>{{ model.name }}</h1>
                {% if model.image %}
                    <img src="/userfiles/articles/{{ model.image }}" alt="{{ model.image_alt }}" title="{{ model.image_title }}" class="responsive">
                {% endif %}
                {{ model.text| raw }}
            </div>
        </div>
    </div>
</div>