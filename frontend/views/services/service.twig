{{ set(this, 'title', model.title) }}
{{ this.registerMetaTag({'name':'description', 'content': model.description}) }}
<div class="container wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="center content">
                <div class="breadcrumbs">
                    <ul>
                        <li><a href="/">Главная</a></li>
                        <li><a href="{{ path('site/page', {'alias' : 'services'}) }}">Услуги</a></li>
                        <li>{{ model.name }}</li>
                    </ul>
                </div>
                <!-- /.breadcrumbs -->

                <h1>{{ model.name }}</h1>
                {{ model.text| raw }}

                <div class="delimiter">&nbsp;</div>
                <div class="title center">Другие услуги</div>
                <div class="delimiter">&nbsp;</div>

                {{ use('frontend/widgets/Services') }}
                {{ services_widget({'exclude': model.id}) }}

            </div>
        </div>
    </div>
</div>