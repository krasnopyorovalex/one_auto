<div id="recall" class="form_box">
    <div class="header">
        <div class="title">Заказать обратный звонок</div>
        <div class="info">
            <div>Принимаем заявки на обратный звонок, заполняйте и, спустя короткое время, мы Вам перезвоним!</div>
        </div>
        <!-- /.info -->
    </div>
    <!-- /.header -->
    <div class="body">
        {% set form = active_form_begin({
            'action': path('/send/recall'),
            'id': 'recall-form'
        }) %}
            {{ html.tag('div','',{'class': 'alert'})| raw }}
            {{ form.field(modelForm, 'name').textInput({'placeholder': 'как к Вам обращаться?'}).label(false)| raw }}
            {{ form.field(modelForm, 'phone', {'options': {'class': 'phone form-group'}}).label(false)| raw }}
            <div class="form-group agree_personal-data">
                *Оставляя заявку вы соглашаетесь на <a href="{{ path('site/page', {'alias': 'personal-data'}) }}">обработку персональных данных</a>
            </div>
            <div class="form-group submit_box">
                {{ html.submitButton('Заказать', {'class': 'order_btn hvr-bounce-to-right'})| raw }}
            </div>
        {{ active_form_end() }}
    </div>
    <!-- /.body -->
</div>
<!-- /#write_message -->