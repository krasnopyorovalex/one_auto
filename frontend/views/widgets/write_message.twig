<div id="write_message" class="form_box">
    <div class="header">
        <div class="title">Написать нам телеграмму</div>
        <div class="info">
            <div>У вас есть вопрос к нам, поэтому пишите, пишите нам:)<br /> Рады будем ответить!</div>
        </div>
        <!-- /.info -->
    </div>
    <!-- /.header -->
    <div class="body">
        {% set form = active_form_begin({
            'action': path('/send/write-message'),
            'id': 'write-message-form'
        }) %}
            {{ html.tag('div','',{'class': 'alert'})| raw }}
            {{ form.field(modelForm, 'name').textInput({'placeholder': 'как к Вам обращаться?'}).label(false)| raw }}
            {{ form.field(modelForm, 'email').textInput({'placeholder': 'Ваш email'}).label(false)| raw }}
            {{ form.field(modelForm, 'info', {'options': {'class': 'form-group textarea'}}).textarea({'placeholder': 'дополнительная информация'}).label(false)| raw }}
            <div class="form-group agree_personal-data">
                *Оставляя заявку вы соглашаетесь на <a href="#">обработку персональных данных</a>
            </div>
            <div class="form-group submit_box">
                {{ html.submitButton('Отправить телеграмму', {'class': 'order_btn hvr-bounce-to-right'})| raw }}
            </div>
        {{ active_form_end() }}

    </div>
    <!-- /.body -->
</div>
<!-- /#write_message -->