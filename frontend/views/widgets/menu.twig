{% if model %}
    <ul class="{{ cssClass }}">
        {% for item in model %}
            <li class="{% if app.request.url == item.link or app.controller.id == item.link| replace({'/':''}) %}active{% endif %}{% if item.menuItems %} has_childs{% endif %}">
                <a href="{{ item.link }}">{{ item.name }}</a>
                {% if item.menuItems %}
                    <ul>
                        {% for item in item.menuItems %}
                            <li><a href="{{ item.link }}">{{ item.name }}</a></li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endif %}